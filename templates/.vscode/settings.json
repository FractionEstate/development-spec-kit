{
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": true
  },
  "github.copilot.chat.enabled": true,
  "github.copilot.editor.enableAutoCompletions": true,
  "editor.inlineSuggest.enabled": true,
  "editor.suggestOnTriggerCharacters": true,
  
  // Spec-Driven Development specific settings
  "files.associations": {
    "*.spec.md": "markdown",
    "spec.md": "markdown",
    "plan.md": "markdown",
    "tasks.md": "markdown",
    "constitution.md": "markdown",
    "data-model.md": "markdown",
    "quickstart.md": "markdown",
    "research.md": "markdown"
  },
  
  // Enhanced markdown support for spec files
  "markdown.preview.breaks": true,
  "markdown.preview.linkify": true,
  "markdown.suggest.paths.enabled": true,
  "markdown.extension.toc.levels": "1..6",
  "markdown.extension.tableFormatter.enabled": true,
  
  // File explorer organization
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "spec.md": "plan.md, tasks.md, data-model.md, quickstart.md, research.md",
    "constitution.md": "memory/*"
  },
  
  // Search configuration for spec files
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.git": true,
    "**/.DS_Store": true
  },
  "search.useIgnoreFiles": true,
  "search.smartCase": true,
  
  // Terminal integration
  "terminal.integrated.cwd": "${workspaceFolder}",
  "terminal.integrated.defaultProfile.osx": "bash",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  
  // Enhanced Copilot context for SDD projects
  "github.copilot.chat.experimental.codeGeneration.instructions": "This is a Spec-Driven Development project. Always consider constitution.md principles, current spec.md requirements, plan.md architecture, and tasks.md progress when providing assistance.",
  "github.copilot.chat.localeOverride": "en"
}
